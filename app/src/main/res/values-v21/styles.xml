<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@android:color/holo_red_dark</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/LoginActionBar</item>
        <item name="android:statusBarColor">@color/darkOrange</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
    </style>





</resources>
